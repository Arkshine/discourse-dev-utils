<DModalBody
  @title={{theme-prefix "dev_utils.modal.title"}}
  @class="insert-table-modal"
>
  <h3>{{d-icon "running"}} Quick Actions</h3>
  <div class="modal-button-group">
    <DButton
      @title={{theme-prefix "dev_utils.actions.toggle_alerts"}}
      @icon="exclamation"
      @label={{theme-prefix "dev_utils.actions.toggle_alerts"}}
      @action={{action "toggleAlerts"}}
    />
    <DButton
      @title={{theme-prefix "dev_utils.actions.toggle_plugin_outlets"}}
      @icon="plug"
      @label={{theme-prefix "dev_utils.actions.toggle_plugin_outlets"}}
      @action={{action "togglePluginOutlets"}}
    />
  </div>

  <h3>{{d-icon "link"}} Quick Links</h3>
  <div class="modal-button-group">
    <DButton
      @title={{theme-prefix "dev_utils.links.themes"}}
      @icon="paint-brush"
      @label={{theme-prefix "dev_utils.links.themes"}}
      @action={{action "visitThemes"}}
    />
    <DButton
      @title={{theme-prefix "dev_utils.links.colors"}}
      @icon="palette"
      @label={{theme-prefix "dev_utils.links.colors"}}
      @action={{action "visitColors"}}
    />
    <DButton
      @title={{theme-prefix "dev_utils.links.settings"}}
      @icon="wrench"
      @label={{theme-prefix "dev_utils.links.settings"}}
      @action={{action "visitSettings"}}
    />
    <DButton
      @title={{theme-prefix "dev_utils.links.plugins"}}
      @icon="plug"
      @label={{theme-prefix "dev_utils.links.plugins"}}
      @action={{action "visitPlugins"}}
    />
    <DButton
      @title={{theme-prefix "dev_utils.links.user_prefs"}}
      @icon="user-cog"
      @label={{theme-prefix "dev_utils.links.user_prefs"}}
      @action={{action "visitUserPrefs"}}
    />
    <DButton
      @title={{theme-prefix "dev_utils.links.text"}}
      @icon="font"
      @label={{theme-prefix "dev_utils.links.text"}}
      @action={{action "visitTextCustomize"}}
    />
    <a
      target="_blank"
      rel="noopener noreferrer"
      href="https://github.dev/discourse/discourse/blob/main/app/assets/javascripts/discourse/app/lib/plugin-api.js#L1"
      class="btn btn-icon-text"
    >
      {{d-icon "code"}}
      {{theme-i18n "dev_utils.links.plugin_api"}}
    </a>
    <a
      target="_blank"
      rel="noopener noreferrer"
      href="https://github.dev/discourse/discourse/blob/main/app/assets/javascripts/discourse/app/lib/plugin-api.js#L1"
      class="btn btn-icon-text"
    >
      {{d-icon "book-open"}}
      {{theme-i18n "dev_utils.links.docs"}}
    </a>
  </div>

  <h3>{{d-icon "tools"}} Common Settings</h3>
  <div class="modal-button-group">
    <ComboBox
      @content={{this.commonSettings}}
      @value={{this.commonSetting}}
      @onChange={{action "navigateToSetting"}}
    />
  </div>
</DModalBody>
